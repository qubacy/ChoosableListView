<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/component_list_item_hint_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        tools:srcCompat="@drawable/ic_checkmark_animated"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/component_list_item_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        tools:text="@string/component_list_item_background_hint_text_swipe_left_text"/>

</merge>